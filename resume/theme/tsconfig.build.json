{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/types",
    "stripInternal": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/main.tsx", "src/**/*.test.*", "src/dev/**", "src/preview/**"]
}
